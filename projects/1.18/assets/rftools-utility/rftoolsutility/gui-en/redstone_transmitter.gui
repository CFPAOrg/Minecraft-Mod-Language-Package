window {
    size(168,44)

    action('reset','reset')

    panel('','vertical') {
        bgthickness(2)
        textfield('name') {
            channel('name')
            desired(160,16)
            tooltips('Optional name of this', 'redstone channel')
        }
        button('reset','Reset Channel') {
            channel('reset')
            desired(160,16)
            tooltips('Reset the channel')
        }
    }
}
